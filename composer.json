{
    "name": "tuxonice/words",
    "description": "A PHP package for generating pronounceable language-like words",
    "type": "library",
    "license": "MIT",
    "keywords": ["word-generator", "language", "portuguese", "spanish", "random-words", "fake-words", "pronounceable"],
    "homepage": "https://github.com/tuxonice/words",
    "support": {
        "issues": "https://github.com/tuxonice/words/issues",
        "source": "https://github.com/tuxonice/words"
    },
    "authors": [
        {
            "name": "Helder Correia",
            "email": "tuxboy@tlab.pt",
            "role" : "Developer"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.6",
        "ext-mbstring": "*",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Tlab\\WordGenerator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tlab\\WordGenerator\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "phpstan": "phpstan analyse src tests"
    }
}
